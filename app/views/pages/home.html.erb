<!-- Listado de parkings disponibles -->
<div class="container">
  <div class="row">
    <% @parkings.each do |parking| %>
      <% if parking.rented? == false %>
        <ul>
        <li><%= parking.name %></li>
        <li><%= parking.address %></li>
        <li><%= parking.description %></li>
        <li><%= parking.price_per_day %></li>
        </ul>
      <% end %>
    <% end %>
  </div>
</div>

<!-- Formulario de busqueda por ciudad, arroja el resultado en la vista index de parkings -->
<h3>Indica donde quieres buscar tu parking</h3>
<%= form_tag url: parkings_path, method: :get, class: "d-flex" do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Encuentra un parking"
  %>
  <%= submit_tag "Buscar", class: "btn btn-primary" %>
<% end %>
