<div class="banner-container">
  <div class="banner mt-3 p-5" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://www.wawanesa.com/resources/img/usa/blog-images/bigstock-The-Only-Vacant-Parking-Space--262193803-min.jpg);">
    <h1 class="text-light">My Parking!</h1>
    <p class="text-light">Consigue o arrienda tu estacionamiento de manera fácil y segura.</p>
    <%= link_to "Ver disponibles", parkings_path, class: "btn btn-outline-success" %>
  </div>
</div>

<div class="container">
<br>
  <div class="row">
    <h2>Últimos Parkings</h2>
      <div class="cards">
        <% @parkings.each do |parking| %>
          <div class="card-trip" id="card-show">
            <% if parking.photo.attached? %>
              <%= cl_image_tag parking.photo.key %>
            <% end %>
            <div class="card-trip-infos">
              <div class= "container-fluid">
                <h4><%= parking.name %></h4>
                <p><%= parking.address %></p>
                <p><%= parking.description.truncate(50) %></p>
                <h5 class="card-trip-pricing mt-2"><strong>$<%= parking.price_per_day.to_i %></strong> por día.</h5>
                <div class="d-grid gap-2">
                  <%= link_to 'Ver más', parking, class: "btn btn-outline-success" %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
  </div>
</div>



