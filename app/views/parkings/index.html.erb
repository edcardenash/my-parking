<div class="container mb-3 mt-4">
  <div class="row">
    <% @parkings.each do |parking| %>
      <% if parking.rented == false %>
        <div class="col-3 mb-4">
          <div class="card-trip">
            <%= cl_image_tag parking.photo.key%>
            <div class="card-trip-infos">
              <div class="pl-2">
                <h2 class="mb-2"><%= link_to parking.name, parking_path(parking), class: "nav-link" %></h2>
                <p><%= parking.address %></p>
              </div>
              <div>
                <p class="mb-2"><i class= "<%= parking.reviews.average(:rating) == nil ? "fa-regular fa-star" : "fa-solid fa-star" %>"></i> <%= parking.reviews.average(:rating) %></p>
                <h2 class="card-trip-pricing">$<%= parking.price_per_day %></h2>
              </div>
            </div>
          </div>
        </div>
      <%end%>
    <% end %>
  </div>
</div>
